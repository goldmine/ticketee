<h2><%= @project.name %>'s Tickets</h2>
<div id="ticket">
   <h2>
     <%= @ticket.title %>
  </h2>
  <div id="author">
    created by <%= @ticket.user.email %>
  </div>

  <%= render @ticket.state if @ticket.state %>

  <%= @ticket.description %>

  <% if @ticket.tags.present? %>
    <h3>Tags</h3>
    <div id="tags">
      <%= render @ticket.tags %>
    </div>
  <% end %>

  <% if @ticket.assets.present?  %>
    <h3>Attachements</h3>
    <div class="assets">
      <% @ticket.assets.each do |asset| %>
      <p>
        <%= link_to File.basename(asset.asset.path), file_path(asset) %>
      </p>
      <p>
        <%= asset.asset.size %>
      </p>
      <% end %>
    </div>
  <% end %>
</div>

<% authorized?("edit ticket", @project) do %>
  <%= link_to "Edit Ticket", [:edit, @project, @ticket] %>
<% end %>
<% authorized?("delete ticket", @project) do %>
  <%= link_to "Delete Ticket", [@project, @ticket], method: :delete %>
<% end %>
<%= link_to "back", @project %>

<h3>Comments</h3>
<div id="comments">
  <% if @ticket.comments.count > 0  %>
    <% @ticket.comments.each do |comment| %>
      <div>
        <h4><%= comment.user %></h4>
        <%= state_for(comment) %>
        <%= comment.text %> <br />
      </div>
    <% end %>
  <% else %>
    <h1>no comments</h1>
  <% end %>
</div>
<%= render "comments/form" %>
