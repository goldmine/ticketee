<%= form_for [:admin, @user] do |f| %>
  <% if @user.errors.any?  %>
    <div id='error_explaination'>
      <h2>提交信息中存在<%=@user.errors.count %>个错误！</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :email, "Email"  %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Password"  %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :admin, "Is an admin?"  %>
    <%= f.check_box :admin %>
  </p>

  <%= f.submit %>

<% end %>
