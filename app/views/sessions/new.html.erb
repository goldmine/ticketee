<h1>登录</h1>

<%= form_tag(sessions_path, method: :post) do %>
  <p>
    <%= label_tag :email, "邮箱" %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password, "密码" %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= check_box_tag :remember_me %>
    <%= label_tag :remember_me, "记住我" %>
  </p>
  <%= submit_tag "提交" %>

<% end %>
